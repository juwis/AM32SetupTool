#:kivy 1.4
<AM32ConftoolLayout>
    GridLayout:
        size: root.width, root.height
        cols: 1
        rows: 2
        TabbedPanel:
            do_default_tab: False
            id: tp_main
            TabbedPanelItem:
                text: "ESC"
                BoxLayout:
                    orientation: "vertical"
                    Label:
                        text: "AM32 ESC Configurator"
                    Button:
                        id: b_update_usb_list
                        text: "Update USB Adapter List"
                        on_press: app.callback_button_update_usb_list(self)
                    Label:
                        id: l_usb_devices
                        text: "no Adapter found"
                    BoxLayout:
                        id: bl_usb_serial_devices
                        orientation: "vertical"

        Button:
            id: b_save_to_esc
            size_hint: 1, 0.1
            text: "save changes"
            disabled: True
            on_press: app.callback_button_save(self)
